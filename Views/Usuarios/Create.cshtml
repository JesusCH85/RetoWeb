@{
    Layout = null;
}
@model CepdiRetoWeb.Models.UsuariosViewModel
<div class=" card text-primary">
    <div class="card-header text-center">
        <h5>Crear Medicamento</h5>
    </div>
    <div class=" card-body text-center">
        <div class=" col-md-12">

            <form asp-action="Create">
                <div class="row">
                    <div class="form-group col-4">
                    <label></label>
                    <input asp-for="Nombre" class="form-control" placeholder="Nombre">
                    <span asp-validation-for="Nombre" class="text-danger"></span>
                </div>
                <div class="form-group col-4">
                    <label></label>
                    <input asp-for="Fechacreacion" class="form-control" placeholder="FechaCreacion">
                    <span asp-validation-for="Fechacreacion" class="text-danger"></span>
                </div>

                <div class="form-group col-4">
                    <label></label>
                    <input asp-for="Usuario" class="form-control" placeholder="Usuario">
                    <span asp-validation-for="Usuario" class="text-danger"></span>
                </div>
                <div class="form-group col-4">
                    <label></label>
                    <input asp-for="Password" class="form-control" placeholder="Password">
                    <span asp-validation-for="Password" class="text-danger"></span>
                </div>
                <div class="form-group col-4">
                    <label></label>
                    <input asp-for="estatus" class="form-control" placeholder="Estatus">
                    <span asp-validation-for="estatus" class="text-danger"></span>
                </div>
                </div>
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                
                <div class=" card-footer text-center">
                    <div class="form-group">
                        <input type="submit" value="Guardar" class="btn btn-outline-primary btn-sm" />
                        <a asp-action="Index" class="btn btn-outline-success btn-sm">Volver a la Lista</a>
                    </div>
                </div>
            </form>
        </div>
    </div>


</div>

