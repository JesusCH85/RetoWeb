@{
    Layout = null;
}
@model CepdiRetoWeb.Models.MedicamentosViewModel
<div class=" card text-primary">
    <div class="card-header text-center">
        <h5>Crear Medicamento</h5>
    </div>
    <div class=" card-body text-center">
        <div class=" col-md-12">
            <form asp-action="Create">
                <div class="row">

                </div>
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-group col-4">
                    <label></label>
                    <input asp-for="Nombre" class="form-control" placeholder="Nombre">
                    <span asp-validation-for="Nombre" class="text-danger"></span>
                </div>
                <div class="form-group col-4">
                    <label></label>
                    <input asp-for="Concentracion" class="form-control" placeholder="Concentracion">
                    <span asp-validation-for="Concentracion" class="text-danger"></span>
                </div>

                <div class="form-group col-4">
                    <label></label>
                    <input asp-for="Precio" class="form-control" placeholder="Precio">
                    <span asp-validation-for="Precio" class="text-danger"></span>
                </div>
                <div class="form-group col-4">
                    <label></label>
                    <input asp-for="stock" class="form-control" placeholder="stock">
                    <span asp-validation-for="stock" class="text-danger"></span>
                </div>
                <div class="form-group col-4">
                    <label></label>
                    <input asp-for="idformafarmaceutica" class="form-control" placeholder="idformafarmaceutica">
                    <span asp-validation-for="idformafarmaceutica" class="text-danger"></span>
                </div>
                <div class="form-group col-4">
                    <label></label>
                    <input asp-for="Presentacion" class="form-control" placeholder="Presentacion">
                    <span asp-validation-for="Presentacion" class="text-danger"></span>
                </div>
                <div class="form-group col-4">
                    <label></label>
                    <input asp-for="Bhabilitado" class="form-control" placeholder="Habilitado">
                    <span asp-validation-for="Bhabilitado" class="text-danger"></span>
                </div>
                <div class=" card-footer text-center">
                    <div class="form-group">
                        <input type="submit" value="Guardar" class="btn btn-outline-primary btn-sm" />
                        <a asp-action="Index" class="btn btn-outline-success btn-sm">Volver a la Lista</a>
                    </div>
                </div>
            </form>
        </div>
    </div>


</div>
